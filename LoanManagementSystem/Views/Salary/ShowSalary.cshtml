                                    @if (ViewBag.empSalary_LIST != null)
                                    {
                                        foreach (SalaryDetails empSal in ViewBag.empSalary_LIST)
                                        {
                                            <tr>
                                                <td align="center"> @empSal.CAL_DATE.ToString("dd/MM/yyyy")</td>
                                                <td align="center"> @empSal.AUTOID</td>
                                                <td align="center"> @empSal.ID</td>
                                                <td align="center"> @empSal.BASIC</td>
                                                <td align="center"> @empSal.HOUSE_RENT</td>
                                                <td align="center"> @empSal.MED_ALLOW</td>
                                                <td align="center"> @empSal.CONV_ALLOW</td>
                                                <td align="center"> @empSal.PF_PN_COR</td>
                                                <td align="center"> @empSal.PENSION_CONTR_COR</td>
                                                <td align="center"> @empSal.PF_CONTR_COR</td>
                                                <td align="center"> @empSal.PF_CONTR_OWN</td>
                                                <td align="center"> @empSal.PF_LOAN</td>
                                                <td align="center"> @empSal.OFF_ASS_SUB</td>
                                                <td align="center"> @empSal.STAFF_BUS</td>
                                                <td align="center"> @empSal.ENTERTAINMENT</td>
                                                <td align="center"> @empSal.EMP_BEN_FUND</td>
                                                <td align="center"> @empSal.WASH_ALLOWS</td>
                                                <td align="center"> @empSal.DEDUCT</td>
                                                <td align="center"> @empSal.P_PAY</td>
                                                <td align="center"> @empSal.UTILITIES</td>
                                                <td align="center"> @empSal.REV_STAMP</td>
                                                <td align="center"> @empSal.TELEPHONE</td>
                                                <td align="center"> @empSal.INCOME_TAX</td>
                                                <td align="center"> @empSal.PREVIOUS_INCOME_TAX</td>
                                                <td align="center"> @empSal.GI_PREM</td>
                                                <td align="center"> @empSal.OTHERS</td>
                                                <td align="center"> @empSal.TEMP_ADVANCE</td>
                                                <td align="center"> @empSal.DEP_ALLOW</td>
                                                <td align="center"> @empSal.CHILD_EDU_ALLOW</td>
                                                <td align="center"> @empSal.AREA</td>
                                                <td align="center"> @empSal.TOTAL_DEDUCT</td>
                                                <td align="center"> @empSal.GROSS_TOTAL</td>
                                                <td align="center"> @empSal.GROSS_TOTAL_WITH_ALLOW</td>
                                                <td align="center"> @empSal.NET_PAYABLE</td>
                                                <td align="center"> @empSal.NET_PAYABLE_WITH_ALLOW</td>
                                                <td align="center"> @empSal.NET_ALLOWANCE</td>

                                            </tr>
                                        }
                                    }

                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript">
            $('#SalaryDetails').DataTable();



        </script>


