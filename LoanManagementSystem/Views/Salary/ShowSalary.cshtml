        <div class="row">
            <!-- ============================================================== -->
            <!-- basic table  -->
            <!-- ============================================================== -->
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">


                            <table id="SalaryDetails" class="table table-striped table-bordered" style="width: 100%">
                                <thead>
                                    <tr>
                                        <th>CaL Date</th>
                                        <th>Autoid</th>
                                        <th>ID</th>
                                        <th>Basic</th>
                                        <th>House rent</th>
                                        <th>Medical Allowance</th>
                                        <th>Convance Allowance</th>
                                        <th>PF Pension Corporation</th>
                                        <th>Pension Contribution Corporation </th>
                                        <th>PF Contribution Corporation </th>
